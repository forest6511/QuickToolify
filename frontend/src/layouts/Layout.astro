---
import Header from '@/components/Header';
import CategoryFilter from '@/components/CategoryFilter';
import MobileMenu from '@/components/MobileMenu';
import { categories } from '@/data/category';
import "../styles/global.css";
---

<!doctype html>
<html lang="ja">
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg"/>
    <title>QuickToolify - 便利なツールコレクション</title>
    <meta name="description" content="QuickToolifyでは、様々なカテゴリの便利なツールを簡単に見つけることができます。">
    <meta name="keywords" content="ツール, オンラインツール, QuickToolify, ユーティリティ">
    <meta property="og:title" content="QuickToolify - 便利なツールコレクション">
    <meta property="og:description" content="QuickToolifyでは、様々なカテゴリの便利なツールを簡単に見つけることができます。">
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://quicktoolify.example.com/">
    <link rel="canonical" href="https://quicktoolify.example.com/">
</head>
<body class="flex flex-col min-h-screen bg-gray-100">
<Header client:load title="ツール一覧" />
<div class="flex flex-1 overflow-hidden">
    <nav aria-label="カテゴリナビゲーション" class="hidden sm:block sm:w-56 h-full">
        <CategoryFilter
          client:load
          categories={[{ id: 0, name: "すべて", bg: "#FFFFFF", text: "#000000" }, ...categories]}
          className="w-full h-full bg-white shadow-md flex flex-col"
        />
    </nav>
    <MobileMenu client:load>
        <CategoryFilter
          client:load
          categories={[{ id: 0, name: "すべて", bg: "#FFFFFF", text: "#000000" }, ...categories]}
        />
    </MobileMenu>
    <main class="flex-1 p-4 sm:p-6 overflow-auto" id="main-content">
        <div class="max-w-7xl mx-auto">
            <slot />
        </div>
    </main>
</div>
<footer class="bg-white py-4 border-t">
    <div class="container mx-auto px-4 text-center text-sm text-gray-600">
        <p>&copy; 2025 QuickToolify - すべての便利なツールを一箇所に</p>
    </div>
</footer>
</body>
</html>

<style>
    html, body {
        margin: 0;
        width: 100%;
        height: 100%;
    }
</style>